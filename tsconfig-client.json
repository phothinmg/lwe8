  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ESNext",
    "outDir": "./web",
    "module": "ESNext"
  },
  "include": ["./client/**/*"]
}
